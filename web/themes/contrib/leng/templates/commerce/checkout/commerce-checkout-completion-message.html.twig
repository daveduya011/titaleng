{#
/**
 * @file
 * Default theme implementation for the completion message.
 *
 * Available variables:
 * - order_entity: The order entity.
 * - payment_instructions: The payment instructions, if provided.
 *
 * @ingroup themeable
 */
#}
<div class="checkout-complete">
    <h2>{{ 'Your order has been successfully processed!'|t }}</h2>
  {{ 'Your order number is @number.'|t({'@number': order_entity.getOrderNumber}) }} <br>
  {{ 'An email regarding your order information will be sent to you shortly.'|t }} <br>
  
  {% if payment_instructions %}
    <div class="checkout-complete__payment-instructions">
      <h2>{{ 'Note: '|t }}</h2>
      {{ payment_instructions }}
    </div>
  {% endif %}
  {{ breakpoint() }}
  {% if logged_in == false %}
  <div class="register-to-track">
    {{ 'Register to keep track of your order in our website and enjoy huge discounts.'|t }}
  </div>
  {% endif %}
</div>
